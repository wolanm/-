<!--pages/edit_scene_activity/edit_scene_activity.wxml-->
<scroll-view class="page-view">
  <form bindsubmit="onSubmit" style="height: 100%; width: 100%;">
    <view class="title-item-view">
      <view class="title-item-text-view">标题</view>
      <input class="title-item-input-view" type="text" name="title" />
    </view>
    <view class="location-item-view">
      <view class="location-item-text-view">活动地点</view>
      <input class="location-item-input-view" type="text" name="location" />
    </view>
    <view class="content-item-with-location-view">
      <view class="content-item-text-view">内容</view>
      <textarea class="content-item-input-view" type="text" maxlength="-1" name="content"></textarea>
    </view>
    <view class="image-item-view">
      <view class="image-item-text-view">图片上传</view>
      <view class="image-item-list-view">
        <view class="image-item-list-for-view" wx:for="{{imgList}}" wx:for-item='imgUrl' wx:for-index='index'>
          <image wx:if="{{index < 6}}" class="image-item-list-img-view" src="{{imgUrl}}" data-index="{{index}}" bindtap="selectImg"></image>
        </view>
      </view>
      
    </view>
    <button type="primary" form-type="submit">保存</button>
  </form>
</scroll-view>
