/* pages/admin_login/admin_login.wxss */
page {
  height: 100%;
  width: 100%;
  padding: 0;
}

.page-view {
  height: 100%;
  width: 100%;
}

.al-background-img-view {
  height: 100%;
  width: 100%;
  opacity: 0.5;
  position: absolute;
  z-index: -2;
}

.al-page-text-view {
  padding-top: 30%;
  padding-left: 6.5%;
  height: 50%;
  width: 80%;
  position: absolute;
  z-index: 1;
}

.al-text-background-img-view {
  height: 100%;
  width: 100%;
  position: absolute;
  opacity: 0.7;
  z-index: 1;
}

.al-title-view {
  height: 20%;
  width: 80%;
  margin-left: 10%;
  color: #1f706f;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #1f706f;
  font-size: 50rpx;
}

.al-login-view {
  height: 40%;
  width: 100%;
  margin-top: 10%;
}

.al-login-item-view {
  height: 20%;
  width: 70%;
  margin-left: 15%;
  margin-bottom: 20%;
  border: solid;
  border-radius: 30rpx;
}

.al-btn-view {
  height: 22%;
  width: 30%;
  line-height: 200%;
  text-align: center;
  border-radius: 30rpx;
  background-color: #1e725e;
  color: white;
}

.al-option-view {
  height: auto;
  width: 100%;
  margin-top: 16.5%;
  margin-left: 67%;
  color: red;
  text-decoration: underline;
}