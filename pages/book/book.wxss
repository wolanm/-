/* pages/book/book.wxss */
page {
  height: 100%;
  width: 100%;
}

.zjn {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.scenic-spot-info{
  margin-top: 50rpx;
  height: auto;
  width: 100%;
  border-top:1rpx solid #eeeeee;
  border-bottom:1rpx solid #eeeeee;
  margin-bottom: 2rpx;
}
.wx-cell{
  margin-bottom: 40rpx;
  margin-left: 60rpx;
  position: relative;
}
.icon{
  width: 50rpx;
  height:50rpx;
  position: absolute;
  left:-55rpx;
  top:-6rpx;
}
.icon-postion{
  width: 50rpx;
  height:50rpx;
}
.cell-bd{
  font-size: 32rpx;
  color:#666;
}

.dizhi{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.name{
  display:flex;
  font-size: 35rpx;
  font-weight: bold;
  padding-left:60rpx;
  margin-bottom: 30rpx;
}
.opentime{
  font-weight: lighter;
  font-size:30rpx;
}
.address{
  font-weight: lighter;
  font-size:30rpx;
}
.section {
  height: 70rpx;
  width: 100%;
  margin-bottom: 20px;
  border-bottom:1rpx solid #eeeeee;
  padding-left: 30rpx;
  line-height: 50rpx;
}
.youke{
  width: 100%;
  margin-top: -10px;
  margin-bottom: 5px;
  font-weight: 900;
  padding-left: 30rpx;
}
.picker {
  height: 45px;
  line-height: 45px;
  background-color: #f5f5f5;
  text-align: center;
}

.input {
  width: 95%;
  height: 45px;
  line-height: 45px;
  background-color: #f5f5f5;
  padding-left: 10px;
}

.submit-btn {
  width: 100%;
  height: 45px;
  line-height: 45px;
  background-color: #1aad19;
  color: white;
  text-align: center;
}