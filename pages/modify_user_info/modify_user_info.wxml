<view class="page-view">
  <view class="img-view">
    <image src="cloud://cloud1-8glw5m5v07e9ee9d.636c-cloud1-8glw5m5v07e9ee9d-1317059123/scenic_spot_tourism_img/me_open.jpg" style="height: 100%; width: 100%;"></image>
  </view>
  <form bindsubmit="onSubmit">
    <view class="userInfo-view">
      <view class="input-view">
        <text class="input-text-view">用户名:</text>
        <input class="input-content-view" name="userName" type="text" placeholder="请输入用户名" value="{{userName}}"/>
      </view>
      <view class="input-view">
        <text class="input-text-view">手机号:</text>
        <input class="input-content-view" name="userPhone" type="text" placeholder="请输入手机号" value="{{userPhone}}"/>
      </view>
    </view>
    <button type="primary" form-type="submit">保存</button>
  </form>
</view>