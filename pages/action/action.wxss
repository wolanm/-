.zjn {
  display: flex;
      flex-direction: row;
      align-items: center;
    padding: 20rpx;
    flex-wrap: wrap;
    height: 150rpx;
  }

  .scenic-spot-list {
    width: 100%;
  }

  .scenic-spot-item{
    border-top: 1rpx solid #ccc;
    display: flex;
      flex-direction: row;
      align-items: center;
      border-bottom: 1rpx solid #ccc;
      box-sizing: border-box;
  }
  .image {
    width: 100px;
      height: 100px;
      margin-right: 10px;
  }
  .text-container {
    display: flex;
    flex-direction: column;
  }

  .name{
    font-size: 16px;
    margin-bottom: 10px;
    font-weight: bold;
  }
  .gaishu{
    width: 445rpx;
    font-size: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:pre-wrap;
    flex: 1 1 auto;
  }